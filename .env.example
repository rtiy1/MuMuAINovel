# 应用配置
APP_NAME=MuMuAINovel
APP_VERSION=1.3.5
APP_PORT=8000
DEBUG=false
TZ=Asia/Shanghai

# PostgreSQL
POSTGRES_DB=mumuai_novel
POSTGRES_USER=mumuai
POSTGRES_PASSWORD=123456
POSTGRES_PORT=5432

# AI 默认配置（首次启动会作为用户默认设置写入数据库）
DEFAULT_AI_PROVIDER=openai
DEFAULT_MODEL=gpt-4o-mini
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=32000

# OpenAI 兼容
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic（支持自定义 base url）
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Gemini（可选）
GEMINI_API_KEY=
GEMINI_BASE_URL=

# LinuxDO OAuth（可选，不使用可留默认）
LINUXDO_CLIENT_ID=11111
LINUXDO_CLIENT_SECRET=11111
LINUXDO_REDIRECT_URI=http://localhost:8000/api/auth/linuxdo/callback
FRONTEND_URL=http://localhost:8000

# 本地登录账号
LOCAL_AUTH_ENABLED=true
LOCAL_AUTH_ALLOW_REGISTRATION=true
LOCAL_AUTH_USERNAME=admin
LOCAL_AUTH_PASSWORD=admin123
LOCAL_AUTH_DISPLAY_NAME=本地管理员

# 会话
SESSION_EXPIRE_MINUTES=120
SESSION_REFRESH_THRESHOLD_MINUTES=30

# 可选：使用国内镜像加速 Docker 构建
USE_CN_MIRROR=false
